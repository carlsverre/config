! URxvt configuration

URxvt.depth:                32
URxvt.loginShell:           true

URxvt*termName:             rxvt-unicode-256color

! Normal
URxvt*keysym.Home:          \033OH
URxvt*keysym.End:           \033OF
URxvt*keysym.F1:            \033OP
URxvt*keysym.F2:            \033OQ
URxvt*keysym.F3:            \033OR
URxvt*keysym.F4:            \033OS

! Fonts
URxvt*allowBold:            true
URxvt*font:                 xft:Hack:style=Regular:size=11
URxvt*boldFont:             xft:Hack:style=Bold:size=11
URxvt*italicFont:           xft:Hack:style=Italic:size=11

! Note, equal is used rather than plus for increase
! since its easier to go up/down without pressing shift half the time
URxvt.keysym.C-equal:       perl:font-size:increase
URxvt.keysym.C-minus:       perl:font-size:decrease

! Ctrl-Arrow keys
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

